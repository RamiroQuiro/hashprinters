---
import "../styles/global.css";

const handleBack = () => {
  window.location.href = '/'
}
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body class="bg-[#121212] text-white min-h-screen">
<header class="bg-black/80 backdrop-blur-sm border-b border-gray-700 sticky top-0 z-50">
      <div class="container mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-4">
            {true && (
              <button
                onclick={handleBack}
                class="bg-gray-700 hover:bg-gray-600 text-white px-4 py-2 rounded-lg transition-colors duration-200"
              >
                ‚Üê Volver al Inicio
              </button>
            )}
            <div>
              <h1 class="text-2xl font-bold text-white">Evento Activo</h1>
              <div class="flex items-center space-x-2 mt-1">
                <span class="text-cyan-400 font-semibold">#EventoActivo</span>
                <div class="flex items-center space-x-1">
                  <div class="w-2 h-2 bg-red-500 rounded-full animate-pulse"></div>
                  <span class="text-red-400 text-sm font-medium">EN VIVO</span>
                </div>
              </div>
            </div>
          </div>
          
          <div class="text-right">
            <p class="text-gray-300 text-sm">Fotos se actualizan cada 15 segundos</p>
          </div>
        </div>
      </div>
    </header>

		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
